<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4"
    tools:context="com.scrat.mm2.sample.SimpleMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:scaleType="center"
            android:layout_height="48dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="渠道统计"
            android:textColor="#333333"
            android:textSize="20sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/install"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/bg_card_home">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:lineSpacingExtra="6dp"
            android:text="1、注册登录后，创建应用。
\n2、查看集成文档，按照说明完成SDK集成。
\n3、将集成完成的apk包上传到Xinstall平台。
\n4、在渠道管理中，创建一个新的渠道，即可生成一个渠道链接。
\n5、测试阶段，用手机扫描渠道链接二维码进入下载页安装测试的应用，查看统计数据。
\n6、测试调整后，发布进入商用。"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btRegist"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_above="@+id/btEffect"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_bt_common"
            android:gravity="center"
            android:text="注册量统计"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btEffect"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_bt_common"
            android:gravity="center"
            android:text="事件统计"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>